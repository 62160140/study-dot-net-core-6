@model Company



<!--enctype เอาไว้ work with Upload File-->
<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <input asp-for="Id" hidden />

    <div class="row">
        <div class="col-12">
            <div class="border p-3 mt-4 row">
                <div class="col-12 pb-2">
                    <h2 class="text-primary">@(Model.Id != 0 ? "Update" : "Create") /h2>
                    <hr />
                </div>
                <div asp-validation-summary="All"></div>
                <div class="mb-3">
                    <!--asp-for เป็น tag helper ใช้สำหรับ bilding Name กับตัวแปรใน Model เลย-->
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <!--asp-validation-for เป็น tag helper ใช้สำหรับแสดงข้อความ error ที่ส่งมาจาก serverside-->
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <!--asp-for เป็น tag helper ใช้สำหรับ bilding Name กับตัวแปรใน Model เลย-->
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <!--asp-validation-for เป็น tag helper ใช้สำหรับแสดงข้อความ error ที่ส่งมาจาก serverside-->
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <!--asp-for เป็น tag helper ใช้สำหรับ bilding Name กับตัวแปรใน Model เลย-->
                    <label asp-for="StreetAddress"></label>
                    <input asp-for="StreetAddress" class="form-control" />
                    <!--asp-validation-for เป็น tag helper ใช้สำหรับแสดงข้อความ error ที่ส่งมาจาก serverside-->
                    <span asp-validation-for="StreetAddress" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <!--asp-for เป็น tag helper ใช้สำหรับ bilding Name กับตัวแปรใน Model เลย-->
                    <label asp-for="City"></label>
                    <input asp-for="City" class="form-control" />
                    <!--asp-validation-for เป็น tag helper ใช้สำหรับแสดงข้อความ error ที่ส่งมาจาก serverside-->
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <!--asp-for เป็น tag helper ใช้สำหรับ bilding Name กับตัวแปรใน Model เลย-->
                    <label asp-for="State"></label>
                    <input asp-for="State" class="form-control" />
                    <!--asp-validation-for เป็น tag helper ใช้สำหรับแสดงข้อความ error ที่ส่งมาจาก serverside-->
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <!--asp-for เป็น tag helper ใช้สำหรับ bilding Name กับตัวแปรใน Model เลย-->
                    <label asp-for="PostalCode"></label>
                    <textarea asp-for="PostalCode" class="form-control" rows="3"></textarea>
                    <!--asp-validation-for เป็น tag helper ใช้สำหรับแสดงข้อความ error ที่ส่งมาจาก serverside-->
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
               
                <div class="col-12">
                    @if (Model.Id != 0)
                    {
                //Update
                            <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
                    }
                    else
                    {
                //Create
                            <button type="submit" class="btn btn-primary" style="width:150px" onclick="return ValidateInput()">Create</button>
                    }

                    <a asp-asp-controller="Company" asp-action="Index" class="btn btn-secondary" style="width:150px;">Back</a>
                </div>

            </div>

        </div>
       
    </div>

</form>

@section Scripts{
    @* validation Client side  ถ้า validation ไม่ผ่านจะไม่ส่งไปให้ server เลย *@
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
